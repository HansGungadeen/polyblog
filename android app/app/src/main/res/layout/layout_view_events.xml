<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


<!--        text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_event_name"
            android:text="Event Name:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
        <!--        text-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Event Name"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/text_event_name"/>

<!--        border-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/border1"
            android:textSize="20dp"
            android:text="------------------------------------------------------------------------"
            android:layout_below="@+id/event_name"/>
<!--        border-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_event_location"
            android:text="Event Location:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/border1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Event Location"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_below="@+id/event_name"
                android:layout_toRightOf="@+id/text_event_location"/>

        <!--        border-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/border2"
            android:textSize="20dp"
            android:text="------------------------------------------------------------------------"
            android:layout_below="@+id/event_location"/>
        <!--        border-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_event_date"
            android:text="Event Date:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/border2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Event Date"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_below="@+id/event_location"
                android:layout_toRightOf="@+id/text_event_date"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>